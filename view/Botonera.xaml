<Window x:Class="Elecciones.Botonera"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Elecciones"
        mc:Ignorable="d"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="#FFFAFAFA"
        FontFamily="{DynamicResource MaterialDesignFont}" Height="500" Width="280" 
        Title="Botonera Extra">
    <Grid Cursor="">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--#region Header con indicador de grupo activo -->
        <Border Grid.Row="0" Background="{DynamicResource PrimaryHueMidBrush}" Padding="8">
            <TextBlock x:Name="lblGrupoActivo" Text="GRUPO 1" FontSize="14" FontWeight="Bold" 
                       HorizontalAlignment="Center" Foreground="White"/>
        </Border>
        <!--#endregion-->

        <!--#region Contenedor de paneles de grupo -->
        <Grid Grid.Row="1">

            <!--#region PANEL GRUPO 1 -->
            <StackPanel x:Name="PanelGrupo1" Visibility="Visible">
                <Grid Margin="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!--#region ÁREA 1: Escaños/Voto/Históricos/Millones -->
                    <GroupBox Grid.Row="0" Header="Ticker" Padding="8" Margin="0,0,0,8"
                              BorderBrush="{DynamicResource PrimaryHueMidBrush}" BorderThickness="1">
                        <StackPanel>
                            <!-- Primera fila: 3 botones -->
                            <Grid Margin="0,0,0,6">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Button x:Name="btnEscanos" Content="Escaños" Grid.Column="0" Margin="2" Padding="8,6" Visibility="Collapsed"
                                        Background="{DynamicResource PrimaryHueMidBrush}" Foreground="White"
                                        Click="btnEscanos_Click"/>
                                <Button x:Name="btnPorcentajeVoto" Content="% Voto" Grid.Column="1" Margin="2" Padding="8,6"
                                        Background="{DynamicResource PrimaryHueMidBrush}" Foreground="White"
                                        Click="btnPorcentajeVoto_Click"/>
                                <Button x:Name="btnHistoricos" Content="Históricos" Grid.Column="2" Margin="2" Padding="8,6"
                                        Background="{DynamicResource PrimaryHueMidBrush}" Foreground="White"
                                        Click="btnHistoricos_Click"/>
                            </Grid>
                            <!-- Segunda fila: 2 botones -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Button x:Name="btnMillones" Content="Entra Fotos" Grid.Column="0" Margin="2" Padding="8,6" 
                                        Background="{DynamicResource PrimaryHueLightBrush}"
                                        Click="btnMillones_Click"/>
                                <Button x:Name="btnHistoricosCom" Content="Sale Fotos" Grid.Column="1" Margin="2" Padding="8,6" 
                                        Background="{DynamicResource PrimaryHueLightBrush}"
                                        Click="btnHistoricosCom_Click"/>
                            </Grid>
                        </StackPanel>
                    </GroupBox>
                    <!--#endregion-->

                    <!--#region ÁREA 2: Video In/Out, Entran/Salen Todos -->
                    <GroupBox Grid.Row="1" Header="Video" Padding="8" Margin="0,0,0,8"
                              BorderBrush="{DynamicResource PrimaryHueMidBrush}" BorderThickness="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Button x:Name="btnVideoIn" Content="Video In" Grid.Column="0" Grid.Row="0" 
                                    Margin="2" Padding="8,6" Background="#4CAF50" Foreground="White"
                                    Click="btnVideoIn_Click"/>
                            <Button x:Name="btnVideoOut" Content="Video Out" Grid.Column="1" Grid.Row="0" 
                                    Margin="2" Padding="8,6" Background="#f44336" Foreground="White"
                                    Click="btnVideoOut_Click"/>
                            <Button x:Name="btnEntranTodos" Content="Entran Todos" Grid.Column="0" Grid.Row="1" 
                                    Margin="2" Padding="8,6" Background="#4CAF50" Foreground="White"
                                    Click="btnEntranTodos_Click"/>
                            <Button x:Name="btnSalenTodos" Content="Salen Todos" Grid.Column="1" Grid.Row="1" 
                                    Margin="2" Padding="8,6" Background="#f44336" Foreground="White"
                                    Click="btnSalenTodos_Click"/>
                        </Grid>
                    </GroupBox>
                    <!--#endregion-->

                    <!--#region ÁREA 3: TD y Especial -->
                    <GroupBox Grid.Row="2" Header="Rótulos" Padding="8" Margin="0,0,0,8"
                              BorderBrush="{DynamicResource PrimaryHueMidBrush}" BorderThickness="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Button x:Name="btnEntraTD" Content="Entra TD" Grid.Column="0" Grid.Row="0" 
                                    Margin="2" Padding="8,6" Background="#ffb038"
                                    Click="btnEntraTD_Click"/>
                            <Button x:Name="btnSaleTD" Content="Sale TD" Grid.Column="1" Grid.Row="0" 
                                    Margin="2" Padding="8,6" Background="#ff7979"
                                    Click="btnSaleTD_Click"/>
                            <Button x:Name="btnEntraEspecial" Content="Entra Especial" Grid.Column="0" Grid.Row="1" 
                                    Margin="2" Padding="8,6" Background="#ffb038"
                                    Click="btnEntraEspecial_Click"/>
                            <Button x:Name="btnSaleEspecial" Content="Sale Especial" Grid.Column="1" Grid.Row="1" 
                                    Margin="2" Padding="8,6" Background="#ff7979"
                                    Click="btnSaleEspecial_Click"/>
                            <Button x:Name="btnDespliega4" Content="Despliega 4" Grid.ColumnSpan="2" Grid.Row="2" 
                            Margin="2" Padding="8,6" Background="BlanchedAlmond" Foreground="Black"
                             Click="btnDespliega4_Click"/>
                        </Grid>
                    </GroupBox>
                    <!--#endregion-->
                </Grid>
            </StackPanel>
            <!--#endregion-->

            <!--#region PANEL GRUPO 2 -->
            <StackPanel x:Name="PanelGrupo2" Visibility="Collapsed">
                <Grid Margin="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!--#region ÁREA 1: Mayoría -->
                    <GroupBox Grid.Row="0" Header="Mayoría" Padding="8" Margin="0,0,0,8"
                              BorderBrush="{DynamicResource PrimaryHueMidBrush}" BorderThickness="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Button x:Name="btnSubeMayoria" Content="Sube Mayoría" Grid.Column="0" 
                                    Margin="2" Padding="10,8" Background="#4CAF50" Foreground="White"
                                    Click="btnSubeMayoria_Click"/>
                            <Button x:Name="btnBajaMayoria" Content="Baja Mayoría" Grid.Column="1" 
                                    Margin="2" Padding="10,8" Background="#f44336" Foreground="White"
                                    Click="btnBajaMayoria_Click"/>
                        </Grid>
                    </GroupBox>
                    <!--#endregion-->

                    <!--#region ÁREA 2: CCAA -->
                    <GroupBox Grid.Row="1" Header="CCAA" Padding="8" Margin="0,0,0,8"
                              BorderBrush="{DynamicResource PrimaryHueMidBrush}" BorderThickness="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Button x:Name="btnSubeCCAA" Content="Sube CCAA" Grid.Column="0" 
                                    Margin="2" Padding="10,8" Background="#4CAF50" Foreground="White"
                                    Click="btnSubeCCAA_Click"/>
                            <Button x:Name="btnBajaCCAA" Content="Baja CCAA" Grid.Column="1" 
                                    Margin="2" Padding="10,8" Background="#f44336" Foreground="White"
                                    Click="btnBajaCCAA_Click"/>
                        </Grid>
                    </GroupBox>
                    <!--#endregion-->
                </Grid>
            </StackPanel>
            <!--#endregion-->

            <!--#region PANEL GRUPO 3 -->
            <StackPanel x:Name="PanelGrupo3" Visibility="Collapsed">
                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Placeholder: Añadir botones del Grupo 3 aquí -->
                    <Border Background="{DynamicResource PrimaryHueLightBrush}" CornerRadius="8" Padding="20" Margin="10">
                        <TextBlock Text="Grupo 3&#x0a;(Pendiente de configurar)" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center" 
                                   TextAlignment="Center" FontSize="14" Opacity="0.7"/>
                    </Border>
                </Grid>
            </StackPanel>
            <!--#endregion-->

        </Grid>
        <!--#endregion-->

    </Grid>
</Window>
